<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProfileActivity">


    <ImageView
        android:id="@+id/profile_activity_image"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/user_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_value_label"
        app:layout_constraintEnd_toEndOf="@+id/user_residence_place"
        app:layout_constraintStart_toStartOf="@+id/user_phone_label"
        app:layout_constraintTop_toBottomOf="@+id/user_phone_label" />

    <TextView
        android:id="@+id/user_residence_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_value_label"
        app:layout_constraintEnd_toEndOf="@+id/user_study_field"
        app:layout_constraintStart_toStartOf="@+id/user_residence_label"
        app:layout_constraintTop_toBottomOf="@+id/user_residence_label" />

    <TextView
        android:id="@+id/user_study_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_value_label"
        app:layout_constraintEnd_toEndOf="@+id/user_university"
        app:layout_constraintStart_toStartOf="@+id/user_study_field_label"
        app:layout_constraintTop_toBottomOf="@+id/user_study_field_label" />

    <TextView
        android:id="@+id/user_university"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_value_label"
        app:layout_constraintEnd_toEndOf="@+id/user_email_field_profile_activity"
        app:layout_constraintStart_toStartOf="@+id/user_university_label"
        app:layout_constraintTop_toBottomOf="@+id/user_university_label" />

    <TextView
        android:id="@+id/user_email_field_profile_activity"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:text="@string/empty_value_label"
        app:layout_constraintEnd_toEndOf="@+id/user_username"
        app:layout_constraintStart_toStartOf="@+id/user_email_label"
        app:layout_constraintTop_toBottomOf="@+id/user_email_label" />

    <TextView
        android:id="@+id/user_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/empty_value_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/user_username_label"
        app:layout_constraintTop_toBottomOf="@+id/user_username_label" />

    <TextView
        android:id="@+id/user_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:text="@string/username_profile_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_activity_image" />

    <TextView
        android:id="@+id/user_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/username_email_label"
        app:layout_constraintStart_toStartOf="@+id/user_username"
        app:layout_constraintTop_toBottomOf="@+id/user_username" />

    <TextView
        android:id="@+id/user_university_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/user_university_label"
        app:layout_constraintStart_toStartOf="@+id/user_email_field_profile_activity"
        app:layout_constraintTop_toBottomOf="@+id/user_email_field_profile_activity" />

    <TextView
        android:id="@+id/user_study_field_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/user_study_field_label"
        app:layout_constraintStart_toStartOf="@+id/user_university"
        app:layout_constraintTop_toBottomOf="@+id/user_university" />

    <TextView
        android:id="@+id/user_residence_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/user_residence_label"
        app:layout_constraintStart_toStartOf="@+id/user_study_field"
        app:layout_constraintTop_toBottomOf="@+id/user_study_field" />

    <TextView
        android:id="@+id/user_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/user_phone_label"
        app:layout_constraintStart_toStartOf="@+id/user_residence_place"
        app:layout_constraintTop_toBottomOf="@+id/user_residence_place" />
</android.support.constraint.ConstraintLayout>