<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="swiat.podzielono.bookswap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BrowseActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".MyBooksActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_mybooks"/>
        <activity android:name=".AddBookActivity"
            android:label="@string/title_activity_addbook"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".chat.ChatActivity"
            android:label="@string/title_activity_chat"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".chat.SearchUserActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_searchuser"/>
        <activity android:name=".chat.ConversationActivity"
            android:label="@string/title_activity_conversation"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.ProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_profile"/>
        <activity android:name=".ChosenBookActivity"
            android:label="@string/title_activity_chosenbook"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".bookSearch.SearchActivity"
            android:label="@string/title_activity_searchbook"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.ChangeProfileDataActivity" />
        <activity android:name=".FavoritesActivity"
            android:label="@string/title_activity_favorites"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".bookSearch.SearchEffectsActivity"></activity>
    </application>

</manifest>